<style>
    .gray td{
        background: #ddd !important;
    }
    .blue td{
        background: #dff !important;
    }

</style>
<table>
    <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Mail</th>
    </tr>
    {% set flg = true %}
    {% for item in data %}
        <tr class="{% if flg %}gray{% else %}blue{% endif %}">
            <td>{{ item.name }}</td>
            <td>{{ item.age }}</td>
            <td>{{ item.mail }}</td>
        </tr>
        {% if flg %}
            {% set flg = false %}
        {% else %}
            {% set flg = true %}
        {% endif %}
    {% endfor %}
</table>
